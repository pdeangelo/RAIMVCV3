@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="form-group col-lg-2">
        <h2>
            @ViewBag.Title
        </h2>
    </div>
    <div class="form-group col-lg-1 col-lg-offset-9">
        <a href="@Url.Action("Register", "Account")"
           class="btn btn-primary btn-lg">
            <span class="glyphicon glyphicon-plus"></span> Add User
        </a>
    </div>
</div>

<hr />
<div class="col-lg-12">
    <table class="table table-striped tableFixHead" id="LoanTable">
        <thead class="thead-dark">
            <tr class="d-flex">
                <th>User Name</th>
                <th>Roles</th>
            </tr>
        </thead>
        @foreach (var user in ViewBag.UserList)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Roles</td>
                <td>
                    <div class="pull-right">
                        <a href="@Url.Action("Edit", new { id = user.UserName })" class="btn btn-warning btn-sm margin-right">
                            <span class="glyphicon glyphicon-edit"></span><span class="hidden-xs"> </span>
                        </a>
                        <a href="@Url.Action("Delete", new { id = user.UserName })" class="btn btn-danger btn-sm">
                            <span class="glyphicon glyphicon-trash"></span><span class="hidden-xs"> </span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>