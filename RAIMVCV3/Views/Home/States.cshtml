@model List<RAIMVCV3.Models.State>
@{
    ViewBag.Title = "States";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Message"]
    </div>
}

@using (Html.BeginForm("StateEdit", "Home", FormMethod.Post))
{
    <div style="overflow-x: auto;" class="col-lg-12">
        <table class="table table-striped tableFixHead" id="ClientTable">
            <thead class="thead-dark">
                <tr class="d-flex">
                    <th>State Name</th>
                    <th class="col-lg-3">&nbsp;</th>
                </tr>
                </thead>
                @for (int index = 0; index < Model.Count; index++)
                {
                    <tr>
                        <td>@Model[index].State1</td>
                        <td>
                            <div class="pull-right">
                                <a href="@Url.Action("EditState", new { id = @Model[index].StateID })" class="btn btn-warning btn-sm margin-right">
                                    <span class="glyphicon glyphicon-edit"></span><span class="hidden-xs"> </span>
                                </a>
                                <a href="@Url.Action("DeleteState", new { id = @Model[index].StateID })" class="btn btn-danger btn-sm">
                                    <span class="glyphicon glyphicon-trash"></span><span class="hidden-xs"> </span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }

        </table>
    </div>
}

