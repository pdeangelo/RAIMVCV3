                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBox("LoanUWIsComplete", Model.LoanUWIsComplete) @Html.DisplayNameFor(m => m.LoanUWIsComplete)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("CompletedBy", new { @class = "control-label" })
                        @Html.DropDownList("CompletedBy", (SelectList)ViewBag.UsersSelectListItems, "--Select--", new { @class = "form-control" })
                    </div>
                    @*End Underwriting*@
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card">
                <h3 class="mb-0">
                    Accounting

                </h3>
            </div>
            <div class="card-body">
                @*Accounting*@
                <div class="form-group">
                    @Html.LabelFor(m => m.DateDepositedInEscrow, new { @class = "control-label" })
                    @Html.EditorFor(m => m.DateDepositedInEscrow, new { htmlAttributes = new { @class = "form-control", @type = "date" } })

