                    </div>

                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBox("LoanUW10031008LoanApplication", Model.LoanUW10031008LoanApplication) @Html.DisplayNameFor(m => m.LoanUW10031008LoanApplication)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBox("LoanUWAllongePromissoryNote", Model.LoanUWAllongePromissoryNote) @Html.DisplayNameFor(m => m.LoanUWAllongePromissoryNote)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
