                <div class="form-group">
                    @Html.LabelFor(m => m.BaileeLetterDate, new { @class = "control-label" })
                    @Html.EditorFor(m => m.BaileeLetterDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })

