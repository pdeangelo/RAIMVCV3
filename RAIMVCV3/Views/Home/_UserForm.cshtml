@model RAIMVCV3.Models.User
@using RAIMVCV3

@using (Html.BeginForm())
{
    @Html.ValidationSummary("The following errors were found:", new { @class = "alert alert-danger" })
<div class="row">

    <div class="col-md-6 col-lg-offset-3">

        <div class="form-group">
            @Html.HiddenFor(m => m.UserID)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.WinUserID, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.WinUserID, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.RoleID, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.RoleID, (SelectList)ViewBag.RoleSelectListItems, "--Select--", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <div class="checkbox">
                <label>
                    @Html.CheckBox("Admin", Model.IsAdmin) @Html.DisplayNameFor(m => m.IsAdmin)
                </label>
            </div>
        </div>

        <div class="col-md-12">
            <div class="pad-top">
                <button type="submit" class="btn btn-success btn-lg margin-right">
                    <span class="glyphicon glyphicon-save"></span> Save
                </button>
                <a href="@Url.Action("Users")" class="btn btn-warning btn-lg">
                    <span class="glyphicon glyphicon-remove"></span> Cancel
                </a>
            </div>
        </div>

    </div>
    </div>
}

